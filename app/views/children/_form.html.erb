<%= form_for(@child) do |f| %>
  <% if @child.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@child.errors.count, "error") %> stopped this working:</h2>
      <ul>
      	<% @child.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
      </ul>
    </div>
  <% end %>

   
  <div>
	  <%= f.label :name, 'Image:' %>
    <%= f.text_field :name, placeholder: 'name...', autofocus: true %>
  </div>

  <div>
    <%= f.label :image, 'Image:' %>
    <%= f.file_field :image %>
  </div>
  
  <div>
    <%= f.label :dob, 'Date of Birth:' %>
    <%= f.date_select :dob %>
  </div>
 
    <%= f.submit 'Submit' %>

<% end %>
