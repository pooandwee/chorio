<div id="box_sign">
            <div class="span12 box">
                <div>
                    <div class="head">
                        <h4>Create your account or</h4>
                        <div class="twitter_btn"><%= link_to image_tag('twitter_but.jpg'),  user_omniauth_authorize_path(:twitter)  %></div>
                    </div>
                    <div class="form">
                        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
										  <%= f.error_notification %>


										    <%= f.input :email, :required => true, :autofocus => true, label: false, placeholder: 'email...' %>
										<% if f.object.password_required? %>
										    <%= f.input :password, :required => true, label: false, placeholder: 'password...' %>
										    <%= f.input :password_confirmation, :required => true, label: false, placeholder: 'password Confirm...' %>
                    <% end %>
										    <%= f.button :submit, "Sign up", class: "btn" %>

										<% end %>
										<p class="already">Already have an account? 
				                <%= link_to "Sign In", new_user_session_path %></p>

										
                    </div>
                </div>
            </div>
            
      
   
</div>

